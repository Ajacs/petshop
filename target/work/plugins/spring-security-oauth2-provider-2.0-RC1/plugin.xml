<plugin name='spring-security-oauth2-provider' version='2.0-RC1' grailsVersion='2.3 &gt; *'>
  <author>Brian Saville</author>
  <authorEmail>bsaville@adaptivecomputing.com</authorEmail>
  <title>OAuth2 Provider support for the Spring Security plugin.</title>
  <description>OAuth2 Provider support for the Spring Security plugin.
</description>
  <documentation>http://adaptivecomputing.github.io/grails-spring-security-oauth2-provider/</documentation>
  <type>SpringSecurityOauth2ProviderGrailsPlugin</type>
  <resources>
    <resource>BootStrap</resource>
    <resource>DefaultOAuth2ProviderSecurityConfig</resource>
    <resource>SpringSecurityOauth2ProviderUrlMappings</resource>
    <resource>grails.plugin.springsecurity.oauthprovider.GormAuthorizationCodeService</resource>
    <resource>grails.plugin.springsecurity.oauthprovider.GormClientDetailsService</resource>
    <resource>grails.plugin.springsecurity.oauthprovider.GormTokenStoreService</resource>
  </resources>
</plugin>